            const synth = window.speechSynthesis;
            let activeTTSButton = null;

            const updateLanguage = (lang) => {
                document.documentElement.lang = lang;
                document.getElementById('lang-toggle').textContent = lang === 'it' ? 'EN' : 'IT';
                document.querySelectorAll('[data-lang-key]').forEach(el => {
                    const key = el.dataset.langKey;
                    if (translations[key]) {
                        if (key === 'backToHome') el.innerHTML = translations[key][lang];
                        else el.textContent = translations[key][lang];
                    }
                });
                renderQuestion();
            };

            const speak = (text, button) => {
                if (synth.speaking && activeTTSButton === button) {
                    if (synth.paused) { synth.resume(); button.classList.add('playing'); } 
                    else { synth.pause(); button.classList.remove('playing'); }
                    return;
                }
                synth.cancel();
                const utterance = new SpeechSynthesisUtterance(text);
                utterance.lang = currentLanguage === 'it' ? 'it-IT' : 'en-US';
                utterance.onstart = () => { button.classList.add('playing'); activeTTSButton = button; };
                utterance.onend = () => { button.classList.remove('playing'); activeTTSButton = null; };
                synth.speak(utterance);
            };

            const renderQuestion = () => {
                const q = quizQuestions[currentIdx];
                document.getElementById('progress-text').textContent = translations.progressText[currentLanguage].replace('{current}', currentIdx + 1).replace('{total}', quizQuestions.length);
                document.getElementById('question-text').textContent = q.question[currentLanguage];
                document.getElementById('question-tts').onclick = () => speak(q.question[currentLanguage], document.getElementById('question-tts'));
                
                const container = document.getElementById('options-container');
                container.innerHTML = '';
                
                const shuffledOptions = [...q.options].sort(() => Math.random() - 0.5);
                
                shuffledOptions.forEach((opt, i) => {
                    const div = document.createElement('div');
                    div.className = "flex items-center gap-3 w-full";
                    
                    const btn = document.createElement('button');
                    btn.className = "option-btn flex-grow text-left p-5 rounded-xl font-semibold text-slate-700";
                    btn.textContent = opt.text[currentLanguage];
                    btn.onclick = () => handleSelect(opt, btn, shuffledOptions);
                    
                    const ttsBtn = document.createElement('button');
                    ttsBtn.className = "tts-button p-2";
                    ttsBtn.innerHTML = `<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20"><path d="M9.383 3.076A1 1 0 0110 4v12a1 1 0 01-1.707.707L4.586 13H2a1 1 0 01-1-1V8a1 1 0 011-1h2.586l3.707-3.707a1 1 0 011.09-.217zM14.657 2.929a1 1 0 011.414 0A9.972 9.972 0 0119 10a9.972 9.972 0 01-2.929 7.071 1 1 0 01-1.414-1.414A7.971 7.971 0 0017 10c0-2.21-.894-4.208-2.343-5.657a1 1 0 010-1.414zm-2.829 2.828a1 1 0 011.415 0A5.983 5.983 0 0115 10a5.984 5.984 0 01-1.757 4.243 1 1 0 01-1.415-1.415A3.984 3.984 0 0013 10a3.983 3.983 0 00-1.172-2.828 1 1 0 010-1.414z"/></svg>`;
                    ttsBtn.onclick = () => speak(opt.text[currentLanguage], ttsBtn);

                    div.appendChild(btn);
                    div.appendChild(ttsBtn);
                    container.appendChild(div);
                });
            };

            const handleSelect = (opt, btn, currentOptions) => {
                if (synth.speaking) synth.cancel();
                const btns = document.querySelectorAll('.option-btn');
                btns.forEach(b => b.disabled = true);
                
                if (opt.isCorrect) {
                    btn.classList.add('correct');
                    score++;
                } else {
                    btn.classList.add('incorrect');
                    btns.forEach(b => {
                        const originalOpt = currentOptions.find(o => o.text[currentLanguage] === b.textContent);
                        if (originalOpt && originalOpt.isCorrect) b.classList.add('correct');
                    });
                }

                document.getElementById('rationale-text').textContent = opt.rationale[currentLanguage];
                document.getElementById('feedback-area').classList.remove('hidden');
                
                const nextBtn = document.getElementById('next-button');
                nextBtn.textContent = currentIdx === quizQuestions.length - 1 ? translations.btnResults[currentLanguage] : translations.btnNext[currentLanguage];
            };

            document.getElementById('next-button').onclick = () => {
                document.getElementById('feedback-area').classList.add('hidden');
                if (currentIdx < quizQuestions.length - 1) {
                    currentIdx++;
                    renderQuestion();
                } else {
                    showResults();
                }
            };

            const showResults = () => {
                document.getElementById('question-area').classList.add('hidden');
                document.getElementById('results-area').classList.remove('hidden');
                document.getElementById('score-text').textContent = `${score} / ${quizQuestions.length}`;
            };

            document.getElementById('restart-button').onclick = () => {
                currentIdx = 0; score = 0;
                document.getElementById('results-area').classList.add('hidden');
                document.getElementById('question-area').classList.remove('hidden');
                renderQuestion();
            };

            document.getElementById('lang-toggle').onclick = () => {
                currentLanguage = currentLanguage === 'it' ? 'en' : 'it';
                localStorage.setItem('language', currentLanguage);
                updateLanguage(currentLanguage);
                if (synth.speaking) synth.cancel();
            };

            const setA11yMode = (enabled) => {
                body.classList.toggle('dsa-mode', enabled);
                localStorage.setItem('dsa-mode', enabled ? 'enabled' : 'disabled');
            };

            document.getElementById('accessibility-toggle').onclick = () => setA11yMode(!body.classList.contains('dsa-mode'));

            if (localStorage.getItem('dsa-mode') === 'enabled') setA11yMode(true);
            updateLanguage(currentLanguage);
        });
    </script>
</body>
</html>
